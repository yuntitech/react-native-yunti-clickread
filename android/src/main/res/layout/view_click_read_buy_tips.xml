<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_read_end"
        android:textColor="@color/color_22"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="购买后继续阅读精彩内容"
        android:textColor="@color/color_99"
        android:textSize="@dimen/size_12" />

    <LinearLayout
        android:id="@+id/layout_buy_clickread_book"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_button_stroke_blue_solid"
        android:clickable="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_now"
            android:textColor="@color/blue_a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:drawableLeft="@drawable/ic_end"
            android:drawablePadding="2dp"
            android:text=""
            android:textColor="@color/blue_a"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>