<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dd"/>
    <RelativeLayout
        android:id="@+id/layout_chapter_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/tv_chapter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_15"
            android:textColor="@color/color_22"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/layout_chapter_page"
            android:text="第一章 雅思精品课程"/>
        <RelativeLayout
            android:id="@+id/layout_chapter_page"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/iv_chapter_lock"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_lock"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_chapter_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/color_99"
                android:text="1"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/view_divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dd"
        android:layout_marginLeft="30dp"/>
</LinearLayout>